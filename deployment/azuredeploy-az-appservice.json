{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",

  "parameters": {


    "keeperConfigPrivateKey": {
      "type": "securestring",
      "metadata": {
        "description": "Specifies valid private key generated on local device."
      }
    },
    "keeperConfigDeviceToken": {
      "type": "securestring",
      "metadata": {
        "description": "Specifies valid device token generated on local device."
      }
    },
    "keeperUserEmail": {
      "type": "string",
      "metadata": {
        "description": "Specifies email address for Keeper User."
      }

    },
    "keeperUserPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Specifies password for Keeper User."
      }
    }

  },

  "variables": {
    "appName": "[concat('firefly-', uniqueString(resourceGroup().id, deployment().name))]",
    "appServicePlanPortalName": "[concat(variables('appName'), '-appServicePlan')]",
    "appLogicAppName": "[concat(variables('appName'), '-logicapp')]",
    "location": "[resourceGroup().location]",
    "sku": "B2",
    "linuxFxVersion": "PYTHON|3.8"
  },

  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2020-06-01",
      "name": "[variables('appServicePlanPortalName')]",
      "location": "[variables('location')]",
      "sku": {
        "name": "[variables('sku')]"
      },
      "kind": "linux",
      "properties": {
        "reserved": true
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2020-06-01",
      "name": "[variables('appName')]",
      "location": "[variables('location')]",

      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanPortalName'))]"
      ],
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanPortalName'))]",
        "siteConfig": {
          "linuxFxVersion": "[variables('linuxFxVersion')]"
        }
      },
      "resources": [
        {
          "type": "sourcecontrols",
          "apiVersion": "2020-06-01",
          "name": "web",
          "location": "[variables('location')]",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', variables('appName'))]"
          ],
          "properties": {
            "repoUrl": "https://github.com/Keeper-Security/Commander-Firefly.git",
            "branch": "main",
            "isManualIntegration": true
          }
        },
        {
          "name": "appsettings",
          "type": "config",
          "apiVersion": "2015-08-01",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', variables('appName'))]"
          ],
          "tags": {
            "displayName": "appsettings"
          },
          "properties": {
            "KEEPER_CONFIG_PRIVATE_KEY": "[parameters('keeperConfigPrivateKey')]",
            "KEEPER_CONFIG_DEVICE_TOKEN": "[parameters('keeperConfigDeviceToken')]",
            "KEEPER_USER_EMAIL": "[parameters('keeperUserEmail')]",
            "KEEPER_USER_PASSWORD": "[parameters('keeperUserPassword')]"
          }
        }

      ]
    },
    {
        "name": "[variables('appLogicAppName')]",
        "type": "Microsoft.Logic/workflows",
        "location": "[resourceGroup().location]",
        "tags": {
          "displayName": "[variables('appLogicAppName')]"
        },
        "apiVersion": "2016-06-01",
        "dependsOn": [
          "[resourceId('Microsoft.Web/sites', variables('appName'))]"
        ],
        "properties": {
          "state": "Enabled",
          "definition": {
            "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
            "actions": {
                "HTTP_AZ_AD": {
                    "inputs": {
                        "headers": {},
                        "method": "GET",
                        "uri": "[concat('https://', reference(resourceId('Microsoft.Web/sites', variables('appName'))).hostNames[0], '/api/v1/firefly/rotate/az/ad')]"
                    },
                    "runAfter": {},
                    "type": "Http"
                },
                "HTTP_AZ_VM": {
                  "inputs": {
                      "method": "GET",
                      "uri": "[concat('https://', reference(resourceId('Microsoft.Web/sites', variables('appName'))).hostNames[0], '/api/v1/firefly/rotate/az/vm')]"
                  },
                  "runAfter": {                  },
                  "type": "Http"
              }
            },
            "contentVersion": "1.0.0.0",
            "outputs": {},
            "parameters": {},
            "triggers": {
              "Recurrence": {
                  "recurrence": {
                      "frequency": "Day",
                      "interval": 1,
                      "schedule": {
                          "hours": [
                              "7"
                          ],
                          "minutes": [
                              0
                          ]
                      },
                      "timeZone": "Pacific Standard Time"
                  },
                  "type": "Recurrence"
              }
          }
        },
          "parameters": {},
          "accessControl": {},
          "runtimeConfiguration": {}
        }
    }
  ]
}